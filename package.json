{
  "name": "mystery-dungeon-game",
  "version": "1.0.0",
  "description": "A roguelike mystery dungeon game with component-based architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "play": "node dist/play.js",
    "web": "vite",
    "dev:web": "concurrently -k -n tsc,vite -c auto \"tsc --watch --preserveWatchOutput\" \"vite\"",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "vite": "^5.4.0",
    "vite-plugin-full-reload": "^1.1.0",
    "vitest": "^3.2.4"
  }
}
